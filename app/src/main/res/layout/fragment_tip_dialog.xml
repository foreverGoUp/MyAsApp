<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog_tip"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:gravity="center"
        android:text="标题"
        android:textSize="@dimen/common_textsize_mid" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tip_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_blank_nor"
            android:layout_marginLeft="@dimen/common_blank_nor"
            android:layout_marginRight="@dimen/common_blank_nor"
            android:text="sssssssssssssssssssssssssssssssssssssssssssssssssssss" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/common_blank_nor"
        android:layout_height="30dp"
        android:text="确定"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#ccc" />

</LinearLayout>