<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog_tip"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_blank_nor"
        android:layout_marginRight="@dimen/common_blank_nor"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:padding="@dimen/common_blank_sml"
        android:textSize="@dimen/common_textsize_big"
        android:gravity="center"
        android:text="标题" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tip_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_blank_nor"
            android:text="sssssssssssssssssssssssssssssssssssssssssssssssssssss" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="@dimen/common_blank_nor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="取消"
            android:gravity="center"
            android:textColor="#fff"
            android:background="#ccc" />

        <View
            android:layout_width="@dimen/common_blank_sml"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="确定"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#ccc"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>