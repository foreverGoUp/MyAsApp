<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_com_view_list_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_blank_nor"
        android:text="选择赋予权限"
        android:textStyle="bold"
        android:textSize="@dimen/common_textsize_mid" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <ListView
        android:id="@+id/lv_com_view_list_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#ccc"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/tv_com_view_list_select_cancel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="@dimen/common_blank_nor"
        android:text="取消"
        android:textColor="#fff"
        android:gravity="center"
        android:background="#ccc" />
</LinearLayout>