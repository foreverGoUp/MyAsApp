<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayout_show_csm_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.kc.activity.ShowCsmViewActivity">

    <TextView
        android:id="@+id/tv_time_axis_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="00:00:00" />

    <com.kc.custom.timeAxis.CsmTimeAxisView
        android:id="@+id/csmTimeAxis"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="@dimen/common_blank_nor"
        android:paddingTop="@dimen/common_blank_nor" />

    <com.kc.custom.CsmDialView
        android:id="@+id/csmDialView"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:visibility="gone" />

    <com.kc.custom.CsmRadarView
        android:id="@+id/csmRadarView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:background="#50ff0000"
        android:visibility="gone"
        radar:defaultScore="100"
        radar:pressTextColor="#ffffff"
        radar:radarLineColor="#fff"
        radar:textColor="#000"
        radar:textSize="10dp" />

    <com.kc.custom.CsmSpiderWebView
        android:id="@+id/csmSpiderWebView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:background="#80ff0000"
        android:visibility="gone"
        radar:defaultScore1="100"
        radar:pressTextColor1="#ffffff"
        radar:radarLineColor1="#fff"
        radar:textColor1="#000"
        radar:textSize1="10dp" />

    <com.kc.custom.test.CsmButton
        android:id="@+id/csmButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="测试点击事件"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:text="点我测试" />

    <Button
        android:id="@+id/bt_test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:text="点我测试1" />

    <Button
        android:id="@+id/bt_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_blank_nor"
        android:text="点我测试2" />
</LinearLayout>
