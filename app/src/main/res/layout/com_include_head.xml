<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_device_face_haed"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height"
    android:background="#fff"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/common_title_height"
        android:layout_height="@dimen/common_title_height"
        android:onClick="onBackClick"
        android:padding="10dp"
        android:src="@drawable/common_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_com_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="窗帘"
            android:textSize="21sp" />

        <ProgressBar
            android:id="@+id/pb_com_head"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_com_head_setting"
        android:layout_width="@dimen/common_title_height"
        android:layout_height="@dimen/common_title_height"
        android:onClick="onClick"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/common_set" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_com_head_refresh"
        android:layout_width="@dimen/common_title_height"
        android:layout_height="@dimen/common_title_height"
        android:onClick="onClick"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/common_set" />
</RelativeLayout>
